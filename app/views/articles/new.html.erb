<!DOCTYPE html>
<html>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag params[:controller] %>
    <body>
        <%= form_for :article, url: articles_path do |f| %>
          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>

          <p>
            <%= f.submit %>
          </p>
        <% end %>

    </body>
</html>
